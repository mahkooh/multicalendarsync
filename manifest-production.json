{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
    "id": "880d5f6d-d20c-4ef9-a76f-b02a93c63202",
    "manifestVersion": "1.17",
    "version": "1.0.0",
    "name": {
        "short": "MultiCalendar",
        "full": "MultiCalendar Sync - Calendar Synchronization Add-in"
    },
    "description": {
        "short": "Synchronize busy time across multiple calendars",
        "full": "Keep your availability consistent across all company calendars by automatically creating busy blocks when you have appointments in other calendars."
    },
    "developer": {
        "name": "Your Organization",
        "websiteUrl": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync",
        "privacyUrl": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/privacy.html",
        "termsOfUseUrl": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/terms.html"
    },
    "icons": {
        "outline": "assets/outline.png",
        "color": "assets/color.png"
    },
    "accentColor": "#230201",
    "localizationInfo": {
        "defaultLanguageTag": "en-us",
        "additionalLanguages": []
    },
    "authorization": {
        "permissions": {
            "resourceSpecific": [
                {
                    "name": "MailboxItem.Read.User",
                    "type": "Delegated"
                },
                {
                    "name": "MailboxItem.ReadWrite.User",
                    "type": "Delegated"
                },
                {
                    "name": "Calendars.Read.Shared",
                    "type": "Delegated"
                },
                {
                    "name": "Calendars.ReadWrite.Shared",
                    "type": "Delegated"
                }
            ]
        }
    },
    "validDomains": [
        "YOUR-GITHUB-USERNAME.github.io"
    ],
    "extensions": [
        {
            "requirements": {
                "scopes": [
                    "mail"
                ],
                "capabilities": [
                    {
                        "name": "Mailbox",
                        "minVersion": "1.3"
                    }
                ]
            },
            "runtimes": [
                {
                    "requirements": {
                        "capabilities": [
                            {
                                "name": "Mailbox",
                                "minVersion": "1.3"
                            }
                        ]
                    },
                    "id": "TaskPaneRuntime",
                    "type": "general",
                    "code": {
                        "page": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/taskpane.html"
                    },
                    "lifetime": "short",
                    "actions": [
                        {
                            "id": "TaskPaneRuntimeShow",
                            "type": "openPage",
                            "pinnable": false,
                            "view": "dashboard"
                        }
                    ]
                },
                {
                    "id": "CommandsRuntime",
                    "type": "general",
                    "code": {
                        "page": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/commands.html",
                        "script": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/commands.js"
                    },
                    "lifetime": "short",
                    "actions": [
                        {
                            "id": "action",
                            "type": "executeFunction"
                        }
                    ]
                }
            ],
            "ribbons": [
                {
                    "contexts": [
                        "mailRead"
                    ],
                    "tabs": [
                        {
                            "builtInTabId": "TabDefault",
                            "groups": [
                                {
                                    "id": "msgReadGroup",
                                    "label": "MultiCalendar",
                                    "icons": [
                                        {
                                            "size": "16",
                                            "sourceLocation": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/assets/icon-16.png"
                                        },
                                        {
                                            "size": "32",
                                            "sourceLocation": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/assets/icon-32.png"
                                        },
                                        {
                                            "size": "80",
                                            "sourceLocation": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/assets/icon-80.png"
                                        }
                                    ],
                                    "controls": [
                                        {
                                            "id": "msgReadOpenPaneButton",
                                            "type": "button",
                                            "label": "Calendar Sync",
                                            "icons": [
                                                {
                                                    "size": "16",
                                                    "sourceLocation": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/assets/icon-16.png"
                                                },
                                                {
                                                    "size": "32",
                                                    "sourceLocation": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/assets/icon-32.png"
                                                },
                                                {
                                                    "size": "80",
                                                    "sourceLocation": "https://YOUR-GITHUB-USERNAME.github.io/multicalendar-sync/assets/icon-80.png"
                                                }
                                            ],
                                            "supertip": {
                                                "title": "MultiCalendar Sync",
                                                "description": "Synchronize busy time across multiple calendars"
                                            },
                                            "actionId": "TaskPaneRuntimeShow"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "contexts": [
                        "mailCompose"
                    ],
